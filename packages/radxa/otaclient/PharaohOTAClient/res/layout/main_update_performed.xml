<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/root"
    android:paddingBottom="@dimen/activity_margin_bottom"
    android:paddingLeft="@dimen/activity_margin_left"
    android:paddingRight="@dimen/activity_margin_right"
    android:paddingTop="@dimen/activity_margin_top" >

    <include layout="@layout/header" />

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="@string/hudl_update_performed"
        android:textColor="@android:color/white"
        android:textIsSelectable="false"
        android:fontFamily="sans-serif-light"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="9dp"
        android:textSize="18sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <LinearLayout
        android:id="@+id/container_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:gravity="right"
        android:orientation="horizontal"
        android:visibility="gone" >

        <!--
             <Button
            android:id="@+id/button_cancel_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="Cancel update" />
        -->

        <Button
            android:tag="button_1"
            android:id="@+id/button_close"
            android:layout_width="@dimen/button_skip_download"
            android:layout_height="wrap_content"
            android:text="@string/label_close" />
    </LinearLayout>

</LinearLayout>