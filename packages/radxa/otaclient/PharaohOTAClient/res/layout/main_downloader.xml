<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_margin_bottom"
    android:paddingLeft="@dimen/activity_margin_left"
    android:paddingRight="@dimen/activity_margin_right"
    android:paddingTop="@dimen/activity_margin_top" >

    <include layout="@layout/header" />

    <TextView
        android:id="@+id/error_description"
        style="@style/tam__header_subheading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="26.66dp"
        android:gravity="left"
        android:text="@string/label_text_download_stop"
        android:textColor="@android:color/white"
        android:textIsSelectable="false"
        android:visibility="gone" />

    <TextView
        android:id="@+id/text_download"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="9dp"
        android:fontFamily="sans-serif-light"
        android:gravity="right"
        android:textColor="@color/GREY"
        android:textIsSelectable="false"
        android:textSize="@dimen/text_download_status" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <LinearLayout
        android:id="@+id/container_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:gravity="right"
        android:orientation="horizontal"
        android:visibility="gone" >

        <Button
            android:id="@+id/button_cancel_update"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:tag="button_1"
            android:text="@string/cancel_update" />
    </LinearLayout>

</LinearLayout>